<li id="<%= bookmark.token %>" class="list-row hover:bg-base-300" data-url="<%= bookmark_path(bookmark) %>">
  <div class="flex cursor-grab">
    <i class="fa-solid fa-grip-vertical my-auto"></i>
  </div>
  <div class="text-4xl font-ubuntu font-light opacity-30 tabular-nums my-auto"><%= bookmark.position.to_s.rjust(2, '0') %></div>
  <div class="list-col-grow my-auto">
    <%= turbo_stream_from bookmark %>
    <div><%= bookmark.name %></div>
    <div class="text-xs font-semibold opacity-60 text-base-content/48"><%= bookmark.url %></div>
  </div>
  <div class="flex flex-col sm:flex-row gap-4 my-auto">
    <div class="tooltip" data-tip="Edit">
      <%= link_to edit_bookmark_path(bookmark), class: "btn btn-soft hover:btn-primary" do %>
        <i class="fa-solid fa-pen"></i>
      <% end %>
    </div>

    <div class="tooltip" data-tip="Delete">
      <%= button_to bookmark, method: :delete, class: "btn btn-error btn-soft hover:btn-error", data: { turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</li>
