<fieldset class="mx-auto fieldset w-full max-w-lg rounded-box border border-base-300 bg-base-200 p-4 shadow-lg sm:w-lg">
  <legend class="fieldset-legend"><%= content_for(:title) %></legend>

  <%# Turbo is disabled to allow for redirects with anchors: https://github.com/hotwired/turbo/issues/211 %>
  <%= form_with(model: application, class: "contents", data: { turbo: false }) do |form| %>
    <% if application.errors.any? %>
      <div id="error_explanation" class="mt-3 rounded-md bg-red-50 px-3 py-2 font-medium text-red-500">
        <h2><%= pluralize(application.errors.count, "error") %> prohibited this application from being saved:</h2>

        <ul class="list-disc ml-6">
          <% application.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.label :name %>
    <%= form.text_field :name, required: true, class: "validator w-full" %>

    <%= form.label :description, "Description (optional)" %>
    <%= form.text_field :description, class: "w-full" %>

    <%= form.label :url %>
    <%= form.url_field :url, required: true, class: "validator w-full" %>

    <div class="divider"></div>

    <%= form.icon_field :icon_id, required: true %>

    <div class="divider"></div>

    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Back", applications_path, class: "btn btn-outline" %>
  <% end %>
</fieldset>
