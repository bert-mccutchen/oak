<% content_for :title, "Applications" %>

<div class="w-full">
  <div class="mb-4 flex flex-col items-center justify-between gap-4 sm:flex-row">
    <h1 class="text-4xl font-bold">Applications</h1>
    <div class="flex flex-row justify-between gap-4">
      <%= tooltip_tag "New Application", position: :bottom do %>
        <%= link_to new_application_path, class: "btn btn-soft btn-primary" do %>
          <%= solid_icon_tag("plus") %>
        <% end %>
      <% end %>

      <%= render "sort_toggle" %>

      <%= tooltip_tag "Home", position: :bottom do %>
        <%= link_to root_path, class: "btn hover:btn-primary" do %>
          <%= regular_icon_tag("house") %>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= turbo_stream_from :applications %>
  <% if @applications.any? %>
    <ul
      class="list rounded-box bg-base-200 shadow-md"
      data-controller="sortable"
      data-sortable-animation-value="100"
      data-sortable-resource-name-value="application"
      data-sortable-handle-value=".cursor-grab"
    >
      <%= render @applications %>
    </ul>
  <% else %>
    <%= render "applications/heros/application_setup" %>
  <% end %>
</div>
