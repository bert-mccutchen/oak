<nav class="dropdown dropdown-start dropdown-bottom">
  <%= link_to "#", id: "navigation", tabindex: 0, role: "button", class: "group btn btn-ghost btn-sm" do %>
    <%= inline_svg_tag "icon.svg", class: "size-6 fill-primary/25 group-hover:fill-primary" %>
  <% end %>
  <ul id="navigation_dropdown" tabindex="-1" class="dropdown-content menu rounded-box border border-neutral shadow-2xl backdrop-blur-xl">
    <% unless current_controller?(:home) %>
      <li class="first:font-bold"><%= link_to "Home", root_path %></li>
    <% end %>
    <% unless current_controller?(:settings) %>
      <li class="first:font-bold"><%= link_to "Settings", settings_path %></li>
    <% end %>
    <% unless current_controller?(:applications) %>
      <li><%= link_to "Applications", applications_path %></li>
    <% end %>
    <% unless current_controller?(:bookmarks) || !Setting[:bookmarks_enabled] %>
      <li><%= link_to "Bookmarks", bookmarks_path %></li>
    <% end %>
    <% unless current_controller?(:themes) %>
      <li><%= link_to "Themes", themes_path %></li>
    <% end %>
  </ul>
</nav>
