<fieldset class="fieldset gap-4 rounded-box border border-base-300 bg-base-200 p-4 shadow-lg">
  <legend class="fieldset-legend">Weather Settings</legend>

  <%= render "settings/inputs/toggle", setting: Setting.find_by(slug: :weather_enabled) %>
  <%= render "settings/inputs/select", setting: Setting.find_by(slug: :temperature_unit), options: [%w[Celsius celsius], %w[Fahrenheit fahrenheit]] %>

  <%= render "settings/inputs/text", setting: Setting.find_by(slug: :latitude) %>
  <%= render "settings/inputs/text", setting: Setting.find_by(slug: :longitude) %>
</fieldset>
